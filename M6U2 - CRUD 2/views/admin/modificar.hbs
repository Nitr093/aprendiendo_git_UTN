<div class="container" style="margin: 50px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h3>Modificar la novedad NÂ° {{novedad.id}}</h3>            
            <form action="/admin/novedades/modificar" method="post">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="form-group mb-3 row">
                    <input type="text" placeholder="Titulo" value="{{novedad.titulo}}" class="form-control"
                        name="titulo">
                </div>
                <div class="form-group mb-3 row">
                    <textarea placeholder="Subtitulo" class="form-control" name="subtitulo">
                    {{novedad.titulo}}
                    </textarea>
                </div>
                <div class="form-group mb-3 row">
                    <textarea placeholder="Cuerpo" class="form-control" name="cuerpo">
                    {{novedad.cuerpo}}
                    </textarea>
                </div>
                <button type="submit" class="btn btn-primary">Modificar <i class="fa-solid fa-pen-to-square"></i></button>
                
            </form>   
            {{#if error}}
                <p>{{message}}</p>
            {{/if}}
            <hr>
            <a class="btn btn-primary mb-5" href='/admin/novedades'><i class="fa-solid fa-left-long"></i> Volver</a>         
        </div>
    </div>
</div>